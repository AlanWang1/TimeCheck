{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/**/**/questions",
        "destination": "/questions.html"
      },
      {
        "source": "/class/**",
        "destination": "/subjectView.html"
      },
      {
        "source": "/feedback-studio/**",
        "destination": "/editor.html"
      }
    ],
    "cleanUrls": true
  },
  "storage": {
    "rules": "storage.rules"
  }
}
